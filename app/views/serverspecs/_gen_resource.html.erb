<div class="panel panel-primary">
  <div class="panel-heading">
    <button class="btn btn-danger pull-right btn-xs" v-on="click: $parent.removeDescribe(idx)"><span class="glyphicon glyphicon-remove"></span></button>
    <h3 class="panel-title">{{desc.resourceType + "(" + desc.name + ")"}}</h3>
  </div>

  <div class="panel-body">

    <div class="form-group">
      <label>
        ResourceType
        <select v-model="desc.resourceType">
          <% resource_types.each do |type| %>
            <option><%= type %></option>
          <% end %>
        </select>
        <a href="http://serverspec.org/resource_types.html#{{desc.resourceType}}">Ref</a>
      </label>
    </div>

    <div class="form-group">
      <label>
        Name
        <input type="text" class="form-control" required v-model="desc.name">
      </label>
    </div>

    <button class="btn btn-success" v-on="click: addIt(desc)"><%=t('serverspecs.generator.add_it')%></button>
    <button class="btn btn-success" v-on="click: addIts(desc)"><%=t('serverspecs.generator.add_its')%></button>

    <div v-repeat="it: desc.body">
      <it-panel it="{{@ it}}" idx="{{$index}}">
      </it-panel>
    </div>
  </div>
</div>
