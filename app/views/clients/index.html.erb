<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t 'clients.client' %></h1>
  <%= breadcrumbs %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t 'clients.code' %></th>
      <th><%= t 'clients.name' %></th>
      <th><%= t 'common.actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.code %></td>
        <td><%= client.name %></td>
        <td>
          <%= link_to t('clients.btn.show_projects'),
            projects_path(client_id: client.id),
            class: 'btn btn-xs btn-info' %>

          <% if current_user.admin? %>
            <%= button_edit_client(client) %>
            <%= button_delete_client(client) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate(@clients) %>
</div>


<%= link_to(
  t('clients.btn.add'),
  new_client_path,
  class: 'btn btn-primary btn-sm'
) if current_user.admin? %>


<% content_for :sidebar do %>
<% end %>
